  <script>
    function showMessage() {
      document.getElementById("message").innerHTML = "Selamat ulang tahun Ayangkuu tercinta ðŸ’– Semoga panjang umur, sehat selalu, bahagia dunia akhirat, makin sayang sama aku, dan semua impian Ayang terkabul. Love youuu so much! ðŸ˜˜ðŸ’–âœ¨";
      setInterval(() => {
        let heart = document.createElement("div");
        heart.innerHTML = "ðŸ’–";
        heart.style.position = "fixed";
        heart.style.left = Math.random() * window.innerWidth + "px";
        heart.style.top = "0px";
        heart.style.fontSize = "30px";
        heart.style.opacity = "0.8";
        heart.style.zIndex = "9999";
        document.body.appendChild(heart);
        let move = setInterval(() => {
          heart.style.top = parseFloat(heart.style.top) + 2 + "px";
          if (parseFloat(heart.style.top) > window.innerHeight) {
            clearInterval(move);
            heart.remove();
          }
        }, 10);
      }, 300);
    }
  </script>
